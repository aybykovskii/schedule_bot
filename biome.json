{
  "$schema": "https://biomejs.dev/schemas/1.5.3/schema.json",
  "organizeImports": {
    "enabled": true
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "complexity": {
        "noStaticOnlyClass": "off"
      },
      "performance": {
        "noAccumulatingSpread": "off"
      },
			"correctness": {
				"noUnusedVariables": "error"
			},
			"nursery": {
				"noUnusedImports": "error"
			},
      "style": {
        "noNonNullAssertion": "off",
        "noUnusedTemplateLiteral": "off"
			}
    }
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "lineWidth": 100
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single",
      "trailingComma": "es5",
      "semicolons": "asNeeded"
    }
  }
}
